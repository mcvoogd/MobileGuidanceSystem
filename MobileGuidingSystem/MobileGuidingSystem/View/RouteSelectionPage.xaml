<Page
    x:Class="MobileGuidingSystem.View.RouteSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image Source="ms-appx:///Assets/background.jpg" Stretch="UniformToFill" HorizontalAlignment="Center" Opacity="0.4"/>
        <TextBlock x:Name="textBlock" Margin="0,50" HorizontalAlignment="Center" TextWrapping="Wrap" Text="select route" VerticalAlignment="Top" FontSize="50" FontFamily="ms-appx:///Assets/A_LOVE_OF_THUNDER.ttf#A Love of Thunder"/>
        <ComboBox VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="12,148" Background="White" Header="Route:"></ComboBox>
        <TextBlock VerticalAlignment="Stretch" Margin="12,250,12,100" Text="De Historische Kilometer...."></TextBlock>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="12" Content="GO!" FontFamily="Assets/A_LOVE_OF_THUNDER.ttf#A Love of Thunder" FontSize="24"></Button>
    </Grid>
</Page>
