<Page
    x:Class="MobileGuidingSystem.View.RouteSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <TextBlock x:Name="textBlock" Margin="0,50" HorizontalAlignment="Center" TextWrapping="Wrap" x:Uid="ROUTEPAGE_SELECTROUTE" VerticalAlignment="Top" FontSize="50" FontFamily="ms-appx:///Assets/A_LOVE_OF_THUNDER.ttf#A Love of Thunder"/>
            <ComboBox VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="12,148" Background="White" Header="Route:" ItemsSource="{x:Bind Routes}" Name="comboBox"></ComboBox>
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="12,12,10,12" Content="GO!" Background="Gray" FontFamily="Assets/A_LOVE_OF_THUNDER.ttf#A Love of Thunder" FontSize="24" Click="Button_Click" Height="53"/>
        <TextBlock VerticalAlignment="Stretch" Margin="12,250,12,100" Text="De Historische Kilometer...."></TextBlock>
    </Grid>
</Page>
