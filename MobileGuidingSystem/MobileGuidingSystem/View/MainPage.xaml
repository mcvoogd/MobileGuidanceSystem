<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:data="using:MobileGuidingSystem.Model.Data"
    x:Class="MobileGuidingSystem.View.MainPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <maps:MapControl x:Name="MyMap"
                         MapServiceToken="hXfoPb3UobMURPpymfd8~0KFlzLHFoGrO6NViSu2ltQ~AhzGBC78z3Ww6lQE6Df1AETSVLvCRCt7Q_WXIMPTYgiPpkVf6kNv0RYgId0cy5a0"
                         ZoomInteractionMode="GestureAndControl"
                         ZoomLevel="{x:Bind model.zoomlevel }"
                         DesiredPitch="{x:Bind model.DesiredPitch}"
                         Center="{x:Bind model.myLocation}"
                         Style="{x:Bind model.MapStyle}"
                         LandmarksVisible="True">

            <maps:MapItemsControl ItemsSource="{x:Bind model.sights}">
                 <maps:MapItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="data:Sight">
                        <StackPanel Tapped="UIElement_OnTapped">
                            <Border>
                            <TextBlock Text="{x:Bind Name}"  maps:MapControl.Location="{x:Bind Position}" Margin="5" FontSize="5"/>
                            </Border>
                            <Image Source="../Assets/home-pin.png"  maps:MapControl.Location="{x:Bind Position}" MaxHeight="40" MaxWidth="40"/>
                        </StackPanel>
                    </DataTemplate>
                </maps:MapItemsControl.ItemTemplate>
            </maps:MapItemsControl>
        </maps:MapControl>



    </Grid>
</Page>
    