<ContentDialog
    x:Class="MobileGuidingSystem.View.ContentDialog1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MobileGuidingSystem.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{x:Bind sight.Name}"
    PrimaryButtonText="See Sight"
    SecondaryButtonText="Close"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid Margin="0,20,0,0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled" VerticalAlignment="Stretch" x:Name="Hoi">
            <Image Source="{x:Bind imagepath}"/>
           
        </ScrollViewer>

        <!--<ListView>
            <ListViewItem>
                
            </ListViewItem>
        </ListView>-->
    </Grid>

</ContentDialog>